@model NBD6.Models.Bid

@{
    ViewData["Title"] = "Details";
}

<h1>Bid Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>Bid</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.BidName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BidName)</dd>
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.BidStart)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BidStart)</dd>
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.BidEnd)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BidEnd)</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <h4>Materials</h4>
            <hr />
            <dl class="row">
                @foreach (var material in Model.Materials)
                {
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => material.MaterialType)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => material.MaterialType)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => material.MaterialQuantity)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => material.MaterialQuantity)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => material.MaterialDescription)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => material.MaterialDescription)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => material.MaterialSize)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => material.MaterialSize)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => material.MaterialPrice)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => material.MaterialPrice)</dd>
                }
            </dl>
        </div>
        <div class="col-md-6">
            <h4>Labour</h4>
            <hr />
            <dl class="row">
                @foreach (var labour in Model.Labours)
                {
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => labour.LabourHours)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => labour.LabourHours)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => labour.LabourDescription)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => labour.LabourDescription)</dd>
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => labour.LabourPrice)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => labour.LabourPrice)</dd>
                }
            </dl>
        </div>
        <div class="col-md-6">
            <h4>Project</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Project.ProjectName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Project.ProjectName)</dd>
                <!-- Add similar blocks for other Project properties -->
            </dl>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BidID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
