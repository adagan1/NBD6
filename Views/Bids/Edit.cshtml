@model NBD6.Models.Bid

@{
    ViewData["Title"] = "Edit";
}

<h1>Bid Edit</h1>

<p>All fields marked with * are required to edit the bid.</p>

<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <h4>Bid</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BidID" />
            <div class="form-group">
                <label asp-for="BidName" class="control-label">Bid Name<span class="text-danger">*</span></label>
                <input asp-for="BidName" class="form-control" id="BidName" />
                <span asp-validation-for="BidName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BidStart" class="control-label">Bid Start Date<span class="text-danger">*</span></label>
                <input asp-for="BidStart" class="form-control" id="BidStart" />
                <span asp-validation-for="BidStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BidEnd" class="control-label">Bid End Date<span class="text-danger">*</span></label>
                <input asp-for="BidEnd" class="form-control" id="BidEnd" />
                <span asp-validation-for="BidEnd" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjectID" class="control-label">Project<span class="text-danger">*</span></label>
                <select asp-for="ProjectID" class="form-control" id="ProjectID" asp-items="ViewBag.ProjectID">
                    <option value="">Select a Project</option>
                    @if (TempData["NewProjectID"] != null)
                    {
                        <option value="@TempData["NewProjectID"]" selected>@TempData["NewProjectSummary"]</option>
                    }
                </select>
                <a class="nav-link text-dark" asp-area="" asp-controller="Projects" asp-action="Create">Create a new Project</a>
            </div>
        </div>

        <!-- Labour Fields -->
        <div class="col-md-6">
            <h4>Labour</h4>
            <hr />
            <div id="labours-container">
                @if (Model.Labours != null && Model.Labours.Any())
                {
                    var laboursList = Model.Labours.ToList();
                    for (int i = 0; i < laboursList.Count(); i++)
                    {
                        var labour = laboursList[i];
                        <div class="form-group">
                            <label asp-for="@labour.LabourHours" class="control-label">Labour Hours<span class="text-danger">*</span></label>
                            <input asp-for="@labour.LabourHours" class="form-control" placeholder="Please enter the number of hours worked" />
                            <span asp-validation-for="@labour.LabourHours" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@labour.LabourDescription" class="control-label">Description<span class="text-danger">*</span></label>
                            <input asp-for="@labour.LabourDescription" class="form-control" placeholder="Enter the type of labour conducted" />
                            <span asp-validation-for="@labour.LabourDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@labour.LabourPrice" class="control-label">Labour Price<span class="text-danger">*</span></label>
                            <input asp-for="@labour.LabourPrice" class="form-control" placeholder="ex: 100" />
                            <span asp-validation-for="@labour.LabourPrice" class="text-danger"></span>
                        </div>
                    }
                }
                else
                {
                    <p>No labour items found.</p>
                }
            </div>
        </div>

        <!-- Material Fields -->
        <div class="col-md-6">
            <h4>Materials</h4>
            <hr />
            <div id="materials-container">
                @if (Model.Materials != null && Model.Materials.Any())
                {
                    var materialsList = Model.Materials.ToList();
                    for (int i = 0; i < materialsList.Count(); i++)
                    {
                        var material = materialsList[i];
                        <div class="form-group">
                            <label asp-for="@material.MaterialType" class="control-label">Material Type<span class="text-danger">*</span></label>
                            <input asp-for="@material.MaterialType" class="form-control" placeholder="ex: soil, bark, roses" />
                            <span asp-validation-for="@material.MaterialType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@material.MaterialQuantity" class="control-label">Quantity<span class="text-danger">*</span></label>
                            <input asp-for="@material.MaterialQuantity" class="form-control" placeholder="ex: 10" />
                            <span asp-validation-for="@material.MaterialQuantity" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@material.MaterialDescription" class="control-label">Description<span class="text-danger">*</span></label>
                            <input asp-for="@material.MaterialDescription" class="form-control" placeholder="Enter the description" />
                            <span asp-validation-for="@material.MaterialDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@material.MaterialSize" class="control-label">Size<span class="text-danger">*</span></label>
                            <input asp-for="@material.MaterialSize" class="form-control" placeholder="Enter the size" />
                            <span asp-validation-for="@material.MaterialSize" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@material.MaterialPrice" class="control-label">Price<span class="text-danger">*</span></label>
                            <input asp-for="@material.MaterialPrice" class="form-control" placeholder="Enter the price" />
                            <span asp-validation-for="@material.MaterialPrice" class="text-danger"></span>
                        </div>
                    }
                }
                else
                {
                    <p>No material items found.</p>
                }
            </div>
        </div>
    </div>

    <!-- Update button -->
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>


<div class="col-md-1">
    <div>
        <a class="nav-link text-dark" href="javascript:history.back()">Go Back</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}