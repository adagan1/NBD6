<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
@model NBD6.Utilities.PaginatedList<NBD6.Models.Bid>

@{
    ViewData["Title"] = "Bids";
}

<h1>Bids</h1>

@if (TempData["AlertMessageBid"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["AlertMessageBid"]
        <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@using (Html.BeginForm("Index", "Bids", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" name="searchTerm" class="form-control w-100" placeholder="Search by Bid Name, Start Date, End Date & Project Name..." value="@ViewBag.CurrentFilter" />
        </div>
        <div class="col-md-6">
            <input type="submit" value="Search" class="btn btn-primary w-15" />
        </div>
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("Bid Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th>
                    @Html.ActionLink("Start Date", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("End Date", "Index", new { sortOrder = ViewBag.EndDateSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Project Name", "Index", new { sortOrder = ViewBag.ProjectNameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BidName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BidStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BidEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.project.ProjectName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BidID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.BidID">Details</a> |
                        <a asp-action="Approval" asp-route-id="@item.BidID">Approval</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_PagingNavBar" model="Model" />
</form>


@section Scripts {
    <script>
        // Your existing scripts or any new ones if needed
    </script>
}
