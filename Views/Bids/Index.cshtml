<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
@model NBD6.Utilities.PaginatedList<NBD6.Models.Bid>

@{
    ViewData["Title"] = "Bids";
}

<h1>Bids</h1>

@if (TempData["AlertMessageBid"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["AlertMessageBid"]
        <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["AlertMessageBidEdit"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["AlertMessageBidEdit"]
        <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["AlertMessageApproval"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["AlertMessageApproval"]
        <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@if (TempData["AlertMessageDecline"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["AlertMessageDecline"]
        <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
@using (Html.BeginForm("Index", "Bids", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" name="searchTerm" class="form-control w-100" placeholder="Search by Bid Name, Start Date, End Date & Project Name..." value="@ViewBag.CurrentFilter" />
        </div>
        <div class="col-md-6">
            <input type="submit" value="Search" class="btn btn-primary w-15" />
        </div>
    </div>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("Bid Name", "Index", new { sortOrder = ViewBag.NameSortParm })
                </th>
                <th>
                    @Html.ActionLink("Start Date", "Index", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("End Date", "Index", new { sortOrder = ViewBag.EndDateSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Project Name", "Index", new { sortOrder = ViewBag.ProjectNameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Approval Status", "Index", new { sortOrder = ViewBag.ProjectNameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Bid Declined", "Index", new { sortOrder = ViewBag.ProjectNameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>

                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BidName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BidStart)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BidEnd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Project.ProjectName)
                    </td>
                    <td>
                        @* Style stuff *@
                        <style>
                            /* Hide the default checkbox */
                            .custom-checkbox input {
                                position: absolute;
                                opacity: 0;
                                cursor: pointer;
                            }

                            /* Style the custom checkbox */
                            .custom-checkbox .checkmark {
                                display: inline-block;
                                width: 20px;
                                height: 20px;
                                border: 1px solid #ccc;
                                position: relative;
                            }

                                /* Create the checkbox checkmark */
                                .custom-checkbox .checkmark:after {
                                    content: "";
                                    position: absolute;
                                    display: none;
                                }

                            /* Show the checkmark when the checkbox is checked */
                            .custom-checkbox input:checked ~ .checkmark:after {
                                display: block;
                            }

                            /* Style the checkmark color */
                            .custom-checkbox .checkmark:after {
                                left: 6px;
                                top: 2px;
                                width: 5px;
                                height: 10px;
                                border: solid black;
                                border-width: 0 2px 2px 0;
                                transform: rotate(45deg);
                                border-color: green;
                            }
                        </style>
                        Client: <label class="custom-checkbox">
                            @Html.DisplayFor(modelItem => item.ClientApproved)
                            <input type="checkbox" checked="@item.ClientApproved" />
                            <span class="checkmark"></span>
                        </label> <br>
                        NBD: <label class="custom-checkbox">
                            @Html.DisplayFor(modelItem => item.NBDApproved)
                            <input type="checkbox" checked="@item.NBDApproved" />
                            <span class="checkmark"></span>
                        </label>
                    </td>
                    <td>
                        <label class="custom-checkbox">
                            @Html.DisplayFor(modelItem => item.BidDeclined)
                            <input type="checkbox" checked="@item.BidDeclined" />
                            <span class="checkmark"></span>
                        </label>
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BidID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.BidID">Details</a> |
                        <a asp-action="Approval" asp-route-id="@item.BidID">Approval</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <partial name="_PagingNavBar" model="Model" />
</form>


@section Scripts {
    <script>
        // Your existing scripts or any new ones if needed
    </script>
}
