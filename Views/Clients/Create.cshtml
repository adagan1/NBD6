@model NBD6.Models.Client

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompanyName" class="control-label"></label>
                <input asp-for="CompanyName" class="form-control" placeholder="example company" />
                <span asp-validation-for="CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" class="form-control" placeholder="example client name" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientContact" class="control-label"></label>
                <input asp-for="ClientContact" class="form-control" placeholder="example@mail.com"/>
                <span asp-validation-for="ClientContact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientPhone" class="control-label"></label>
                <input asp-for="ClientPhone" class="form-control" placeholder="xxx-xxx-xxxx" />
                <span asp-validation-for="ClientPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <select asp-for="AddressID" class="form-control" asp-items="ViewBag.AddressID"></select>
                <a class="nav-link text-dark" asp-area="" asp-controller="Addresses" asp-action="Create">Create a new Address</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Function to load saved data from sessionStorage
            function loadData() {
                document.querySelectorAll("#ClientFirstName, #ClientLastName, #ClientContact, #ClientPhone").forEach(function (input) {
                    const savedValue = sessionStorage.getItem(input.id);
                    if (savedValue) {
                        input.value = savedValue;
                    }
                });
            }

            
            document.querySelectorAll("#ClientFirstName, #ClientLastName, #ClientContact, #ClientPhone").forEach(function (input) {
                input.addEventListener("input", function () {
                    sessionStorage.setItem(this.id, this.value); 
                });
            });

            loadData();

            document.querySelector("form").addEventListener("submit", function () {
                ["ClientFirstName", "ClientLastName", "ClientContact", "ClientPhone"].forEach(function (fieldId) {
                    sessionStorage.removeItem(fieldId);
                });
            });
        });
    </script>
}
