@model NBD6.Utilities.PaginatedList<NBD6.Models.Address> 
@{
    ViewData["Title"] = "Index";
}

<h1>Addresses</h1>

@using (Html.BeginForm("Index", "Addresses", FormMethod.Get, new { @class = "form-inline" }))
{
    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text" name="searchString" class="form-control w-100" placeholder="Search by Country, Province, Postal, Street..." />
        </div>
        <div class="col-md-6">
            <input type="submit" value="Search" class="btn btn-primary w-15" />
        </div>
    </div>
}

<form asp-action="Index" method="get">
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.CountrySortParm">Country</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.ProvinceSortParm">Province</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.PostalSortParm">Postal</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewBag.StreetSortParm">Street</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Postal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
            </tr>
        }
    </tbody>
</table>
    

<partial name="_PagingNavBar" model="Model" />
</form>

@section Scripts {
    <script>
        sessionStorage.clear();
    </script>
}